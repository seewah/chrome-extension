{
  	"name": "Mendeley Newsfeed Chrome Extension",
  	"version": "1.2.1",
	"manifest_version": 2,
  	"description": "Mendeley Chrome extension for newsfeed notification",
  	"browser_action": {
  		"default_icon": {                   
            "19": "images/icon19.png",
            "38": "images/icon38.png"
        },
		"default_title": "Mendeley Newsfeed Chrome extension",
		"default_popup": "popup.html"
	},
	"permissions": [
		"http://www.mendeley.com/",
		"contextMenus", 
		"tabs",
    		"cookies",
		"alarms"
	],
	"icons": {
		"16": "images/icon16.png",
		"48": "images/icon48.png",
		"128": "images/icon128.png"
	},
	"background": {
		"page": "background.html"
	}
}
